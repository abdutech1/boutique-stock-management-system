{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": ".",                              
    "paths": {
      "@/*": ["src/*"],                            
      "@/generated/*": ["src/generated/*"]        
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "./tsconfig.prisma.json" }
  ]
}

